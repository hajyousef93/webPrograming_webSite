@{ double userid = 0;}



<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>


    <title>@ViewBag.Title - BIKECO</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <link href="~/Content/DataTable/css/jquery.dataTables.css" rel="stylesheet" />
    <script src="~/Scripts/DataTable/jquery.dataTables.js"></script>
    <style>
        html {
            height: 100%;
        }

        body {
            height: 100%;
        }

        footer.ex1 {
            color: white;
            background-color: #222;
            height: 80px;
            white-space: nowrap;
            overflow: hidden;
            text-align: center;
            min-height: 100%;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("BIKE_CO", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Products", "Index", "Products")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                </ul>
                @if (Session["UserId"] != null)
                {
                    userid = Convert.ToDouble(Session["UserId"]);
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#">Welcome :@Session["UserName"]</a></li>
                    <li>@Html.ActionLink("Update My Account", "Edit", "Customers",new { id = userid },null)</li>
                    <li>@Html.ActionLink("Logout", "Logout", "Customers")</li>
                </ul>
                }
                else
                {
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Register", "Register", "Customers")</li>
                    <li href="#" class="navbar-link" data-toggle="modal" data-target="#myModal" style="padding:16px;">Login</li>
                </ul>
                }
            </div>
        </div>
    </div>

    <div class="modal fade" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    <h3 class="modal-title">Login Form</h3>
                </div>
                <div class="modal-body">
                    <form id="myForm">
                        @Html.Action("Login", "Customers")
                    </form>
                    <div style="text-align:center;display:none" id="loaderDiv">
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="container body-content">
        @RenderBody()
        <hr />

        <footer class="ex1">
            <br>
            &copy; @DateTime.Now.Year - Powered by AWP & ADM Team
            <p>DONE BY:
            Mhd_Mohsen_121343
            Mohammad_121485
            Ahmad_121295</p>
        </footer>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
